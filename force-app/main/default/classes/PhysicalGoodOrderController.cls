    @AuraEnabled
    //Determines if shipping item can be modified
    public static String getShippingItemStatus(Id shippingItemId){
        Shipping_Item__c shippingItem = [Select Order_Product__r.SBQQ__Status__c, Fulfilled_By_Amazon__c, Amazon_Sku__c, ShipStation_SKU__c, Shipped__c from Shipping_Item__c where id = :shippingItemId];
        if(shippingItem.Order_Product__r.SBQQ__Status__c != 'Draft' || shippingItem.Fulfilled_By_Amazon__c == TRUE || shippingItem.Shipped__c == TRUE || shippingItem.ShipStation_SKU__c != null){
            return 'INVALID';
        }
        else{
            return 'VALID';
        }
    }
    
    @AuraEnabled
    //Reduce the ordered quantity on the specified shipping items order product    
    public static Boolean reduceShippingQuantity(Id shippingItemId, Decimal newQuantity){
        try{
            Shipping_Item__c shippingItem = [Select Quantity__c, Order_Product__c from Shipping_Item__c where id = :shippingItemId];
            OrderItem op = [Select Id, Shipping_Amount__c, Shipping_Tax__c, SBQQ__Status__c, SBQQ__OrderedQuantity__c, Quantity, Total_Amount_Without_Tax__c, Net_Unit_Price__c, Tax_Rate__c, Sales_Tax__c, Total_Net_Price__c from OrderItem where id = :shippingItem.Order_Product__c];
            
            if(op.SBQQ__Status__c != 'Draft'){
                op.SBQQ__Status__c = 'Draft';
                update op;
            }
            
            Decimal originalQuantity = op.SBQQ__OrderedQuantity__c;
            //update cost based on the new quantity
            op.SBQQ__OrderedQuantity__c = newQuantity;            
            op.Total_Amount_Without_Tax__c = op.Net_Unit_Price__c * newQuantity;
            Decimal salesTax = (op.Net_Unit_Price__c * newQuantity) * (op.Tax_Rate__c/100);
            salesTax = salesTax.setScale(2);
            op.Sales_Tax__c = salesTax;
            op.Total_Net_Price__c = (op.Net_Unit_Price__c * newQuantity) + salesTax;

			//Reduce the shipping amount by 75% of the difference of the quantities
            Decimal difference = (originalQuantity - newQuantity) * .75;
            
            op.Shipping_Amount__c = op.Shipping_Amount__c - difference; 
            Decimal shippingTax = op.Shipping_Amount__c * (op.Tax_Rate__c/100);
            shippingTax = shippingTax.setScale(2);
            op.Shipping_Tax__c = shippingTax;
            update op;
     
            //op.Quantity--;
            //update op;
            
            shippingItem.Quantity__c = newQuantity;
            update shippingItem;
            
            return true;
        }
        catch(Exception e){
            return false;
        }
    }
    
    @AuraEnabled
    //Cancels a shipping Items order product    
    public static Boolean cancelShippingItem(Id shippingItemId){
        try{
            Shipping_Item__c shippingItem = [Select Order_Product__c from Shipping_Item__c where id = :shippingItemId];
            OrderItem op = [Select SBQQ__Status__c from OrderItem where id = :shippingItem.Order_Product__c];
            op.SBQQ__Status__c = 'Canceled';
            update op;
            return true;            
        }
        catch(Exception e){
            return false;
        }
    }
      
