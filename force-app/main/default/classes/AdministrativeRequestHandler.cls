    @AuraEnabled
    public static Account getAccountInfo(String sObjectName, String recordId){
		Account account;
        if(sObjectName == 'Invoice__c'){
			Invoice__c invoice = [Select Id, Account__c from Invoice__c where Id=:recordId][0];
            account = [Select Id from Account where Id=:invoice.Account__c];
        }
        else if(sObjectName == 'SBQQ__Quote__c'){
			SBQQ__Quote__c quote = [Select Id, SBQQ__Account__c from SBQQ__Quote__c where Id=:recordId][0];
            account = [Select Id from Account where Id=:quote.SBQQ__Account__c];
        }
        else if(sObjectName == 'Order'){
            Order order = [Select Id, AccountId from Order where Id=:recordId][0];
            account = [Select Id from Account where Id=:order.AccountId];
        }
        else if(sObjectName == 'OrderItem'){
            OrderItem orderItem = [Select Id, Account__c from OrderItem where Id=:recordId][0];
            account = [Select Id from Account where Id=:orderItem.Account__c];            
        }
        
        return account;
    }
    
