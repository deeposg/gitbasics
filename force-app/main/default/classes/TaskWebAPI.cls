@RestResource(urlMapping='/TaskAPI/*')
global class TaskWebAPI {
	
    //Creates a task for operations and points them to URL for fulfillment
    @HttpPost
    global static void addTask(TaskRequest request){
        
        User user = [Select Id from User where name = :request.username];
		
		//create task with correct details        
		Task t = new Task();
        t.Subject = request.msg;
        t.ownerId = user.Id;
        t.Status = 'Open';
        t.Priority = 'High';
        t.Type = 'Other';
        t.Description = request.URL;
        t.ActivityDate = Date.Today() + 2;
        insert t;        
    }
    
    global class TaskRequest{
        global String URL;
        global String msg;
        global String username;
    }
    
