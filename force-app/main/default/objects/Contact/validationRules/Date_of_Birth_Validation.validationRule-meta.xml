<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_of_Birth_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND
(
(YEAR(TODAY()) - YEAR(Date_Of_Birth__c)) &lt; 13
)</errorConditionFormula>
    <errorMessage>Date of birth year is invalid!</errorMessage>
</ValidationRule>
