<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_and_Mobile_Phone_are_the_same</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
Phone = MobilePhone,
NOT(ISBLANK(Phone)),
NOT(ISBLANK(MobilePhone))
)</errorConditionFormula>
    <errorMessage>Phone and Mobile Phone are the same.</errorMessage>
</ValidationRule>
