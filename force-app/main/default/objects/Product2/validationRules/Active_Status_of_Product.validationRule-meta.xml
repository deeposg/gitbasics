<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Active_Status_of_Product</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISCHANGED(IsActive),
  $Profile.Name != &apos;OSG Sys Admin&apos;
)</errorConditionFormula>
    <errorMessage>You do not have permission to adjust active status on product! Contact your administrator.</errorMessage>
</ValidationRule>
